{
  "schemaVersion": 1,
  "id": "onewayglass",
  "version": "${version}",

  "name": "OneWayGlass",
  "description": "A mod that turns a majority of vanilla blocks into secretive, one-way glass blocks. Great for building hidden bases.",
  "authors": [
    "TechnoAlli3"
  ],
  "contact": {
    "homepage": "https://github.com/technoalli3"
  },

  "license": "LGPL-3.0",
  "icon": "assets/onewayglass/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "com.alli.onewayglass.GlassClient"
    ],
    "main": [
      "com.alli.onewayglass.OneWayGlass"
    ]
  },
  "mixins": [
    "onewayglass.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "conflicts": {

  },
  "suggests": {
    "another-mod": "*"
  }
}
